<Page x:Class="UsersApp.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UsersApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid Background="#ffdadada">
        <Grid.RowDefinitions>
            <RowDefinition Height="257*"/>
            <RowDefinition Height="314*"/>
        </Grid.RowDefinitions>
        <Border MinWidth="400" Margin="15,155,15,137.6" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20" Grid.RowSpan="2" Height="157">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>

            <StackPanel Height="175" Margin="-0.4,0,-0.2,0">
                <TextBlock x:Name="textBlockErrLogUp" HorizontalAlignment="Center" Text="" FontSize="14" />
                <TextBlock HorizontalAlignment="Center" Text="Welcome, friend!" FontSize="24" FontWeight="Bold" Margin="0 0"/>
                <Button Click="Button_Start_Texting" Margin="180,10,180.2,10" Content="Start texting"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
